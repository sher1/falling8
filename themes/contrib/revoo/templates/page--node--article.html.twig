    <div class="opener">
	    <div class="container">
	        <div class="row">
	         	<h1>{{ title }}</h1>
	          	<h2>{{ node.field_sub_title.value }}</h2>
	        </div>
	    </div>
    </div>
</main>
<div class="content">
    <section class="section">
	    <div class="container">
	    	{% if page.content %}
                {{ page.content }}
            {% endif %}
	    </div>
    </section>
</div>
